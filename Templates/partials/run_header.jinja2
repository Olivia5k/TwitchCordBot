<section class="section">
  <div class="box run-header is-paddingless">
    <div class="avatar">
      <img class="{{ run.character | lower }} {{ run.verb }}"
        src="/static/characters/{{ run.character | lower }}-{% if run.done and not run.won %}loss{% else %}face{% endif %}.png"/>
    </div>
    <div class="container">
      <div class="run-title pt-4 pr-4 pb-4">
        <div class="title">
          {{ run.character }}
          {% if run.done %}
            {% if run.won %} victory! ðŸŽ‰ {% else %} loss ðŸ˜” {% endif %}
          {% else %}
            ongoing
          {% endif %}
        </div>
        <div class="score">
          <div class="points">
            {% if run.done %}
              {{ run.score }} points
            {% else %}
              On floor {{ run.current_floor }}
            {% endif %}
            {% if run.ascension_level != 20 %}
              (A{{ run.ascension_level }})
            {% endif %}
          </div>
          <div class="extra">
            {% if run.done %}
              {% if not run.won %}
                Killed by {{ run.killed_by }} on floor {{ run.floor_reached }}
              {% endif %}
            {% else %}
              {{ run.upcoming_boss }}
            {% endif %}
          </div>
        </div>
        <div class="extra">
          {% if run.done %}
            <div>Took {{ run.run_length }}</div>
            <div title="{{ run.timestamp }}">
              {% if run.timedelta.days > 0 %}
                {{ run.timedelta.days }} days ago
              {% else %}
                Today!
              {% endif %}
            </div>
          {% else %}
            <div>
              {{ run.potion_chance }}% potion chance
            </div>
            <div>
              {{ run.current_purge }}g removal cost
            </div>
          {% endif %}
          <div>{{ run.seed }}</div>
        </div>
        {% if run.modded %}
          <i title="This is a modded character. Not all data will be accurate."
            class="fa-solid fa-circle-radiation"></i>
        {% endif %}
      </div>
    </div>
  </div>
</section>
